{
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "packages/web/dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "github": {
    "silent": true
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "master": true,
      "develop": true
    }
  },
  "env": {
    "VITE_VERCEL_DEPLOYMENT": "true"
  }
} 
